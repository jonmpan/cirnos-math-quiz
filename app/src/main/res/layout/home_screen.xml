    <WebView
        android:id="@+id/webView_homeScreen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/btn_lunatic"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/difficulty_button"
        android:text="Lunatic"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/difficulty_button"
        android:text="Normal"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_rules_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Rules:"
        android:textColor="#1500ff"
        android:textSize="32dp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_rules_label_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(ordered by priority)"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_label" />

    <TextView
        android:id="@+id/tv_rules_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="If &quot;9&quot; is in the question"
        android:textColor="#1500ff"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_label_2" />

    <TextView
        android:id="@+id/tv_rules_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="19+5=24    9-3=6"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_1" />

    <TextView
        android:id="@+id/tv_rules_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Else if the answer is &quot;9&quot;"
        android:textColor="#1500ff"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="#80FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_2" />

    <TextView
        android:id="@+id/tv_rules_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="4+5=⑨    3+3+3=⑨"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="#CCFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_3" />

    <TextView
        android:id="@+id/tv_rules_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Else addition is like this"
        android:textColor="#1500ff"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="#CCFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_4" />

    <TextView
        android:id="@+id/tv_rules_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1+1=11    5+6+3=563"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="#D9FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_5" />

    <TextView
        android:id="@+id/tv_rules_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="And Subtraction is like this"
        android:textColor="#1500ff"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="#D9FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_6" />

    <TextView
        android:id="@+id/tv_rules_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2-1=12    3-2-1=123"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rules_7" />

<!--        <TextView-->
<!--        android:id="@+id/tv_nine"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:text="⑨"-->
<!--        android:textColor="#1500ff"-->
<!--        android:textSize="64dp"-->
<!--        android:textStyle="bold"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tv_rules_8" />-->

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textColor="#1500ff"
        android:textSize="64dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_lunatic"
        app:layout_constraintStart_toStartOf="@id/btn_normal"
        app:layout_constraintBottom_toBottomOf="@id/btn_normal"/>

    <TextView
        android:id="@+id/tv_normal_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_normal"
        app:layout_constraintStart_toStartOf="@id/btn_normal"
        app:layout_constraintBottom_toTopOf="@id/btn_normal"/>

    <TextView
        android:id="@+id/tv_lunatic_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#1500ff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_lunatic"
        app:layout_constraintStart_toStartOf="@id/btn_lunatic"
        app:layout_constraintBottom_toTopOf="@id/btn_lunatic"/>

    <Button
        android:id="@+id/btn_home_to_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/difficulty_button"
        android:text="My Scores"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_read_files"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/difficulty_button"
        android:text="Debug Button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
